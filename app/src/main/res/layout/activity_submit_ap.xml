<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_head_back_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_chat_top_10"
            android:layout_weight="1"
            android:text="请选择该Ap所在位置"
            android:textSize="@dimen/activity_margin_20"
            android:layout_gravity="center"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/sp_school"
            android:layout_width="0dp"
            android:background="@color/colorPrimaryDark"
            android:layout_height="42dp"
            android:layout_marginLeft="@dimen/margin_chat_top_5"
            android:dropDownVerticalOffset="40dp"
            android:layout_weight="0.4" />

        <Spinner
            android:id="@+id/sp2_building"
            android:layout_width="0dp"
            android:background="@color/colorPrimaryDark"
            android:layout_height="42dp"
            android:layout_weight="0.3"
            android:dropDownVerticalOffset="40dp"
            android:layout_marginLeft="@dimen/margin_chat_top_5"
            />

        <EditText
            android:id="@+id/et_location"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginLeft="@dimen/margin_chat_top_5"
            android:layout_marginRight="@dimen/margin_chat_top_5"
            android:layout_weight="0.3"
            android:background="@drawable/bg_edittext"
            android:hint="教室"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dip"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:layout_gravity="top"
       >

        <Button
            android:id="@+id/bt_mac"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/activity_margin_80"
            android:layout_marginRight="@dimen/activity_margin_80"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="上传"
            android:textSize="@dimen/activity_margin_20"/>
    </LinearLayout>

</LinearLayout>
